
@{
    ViewBag.Title = "Load Ammount Page";
}


<div>
    @using (Html.BeginForm("Load", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {


        <div class="form-group">
            <div class="input-group">
                @Html.Label("Ammount", new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.TextBox("Ammount")
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Register" />

        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
